<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginfields"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/loginfields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your challenges for level 2:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"

            android:text="Go paperless!
Cancel junk mail subscriptions
Opt into online billing"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take photo"
            android:id="@+id/photo_level2"
            android:backgroundTint="#96e3b4"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload photo"
            android:id="@+id/uploadphoto_level2"
            android:backgroundTint="#96e3b4"

            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_pic"
                android:id="@+id/imageview_level2"
                android:visibility="invisible"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/completeLevel2"
            android:text="Complete Level 2"
            android:background="@drawable/roundedbutton"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:id="@+id/learnMoreTextLevel2"

            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="invisible"
android:text="Environmental Protection Agency estimated that 60% of junk mail is trashed and landfilled, and NOT recycled. Junk mail produces more than 51 million metric tons of greenhouse gases each year. Junk mail adds 1 billion pounds of waste to landfills each year. This small change can make a big difference on the environment! "/>
        <Button
            android:id="@+id/profilebtn_level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Profile"
            android:textAlignment="center"
            android:textSize="14sp"
            android:backgroundTint="@android:color/holo_green_light"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn More"
            android:id="@+id/learnMoreButtonLevel2"
            android:background="@android:color/transparent"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>